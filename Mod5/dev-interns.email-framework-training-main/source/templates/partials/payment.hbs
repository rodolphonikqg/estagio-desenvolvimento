{{#compare split "!=" true}}
  <tr>
    <td class="w-100 ph4 pv2">
      <h3 class="h3">((i18n.payment.title))</h3>
      {{#each paymentData.transactions}}
        <!-- 1 payment -->
        {{#compare payments.length "==" 1}}
          {{#each payments}}
            <div class="pt3 f5 lh-copy">
              <strong>((i18n.payment.totalPrice))</strong>
              ((i18n.common.currency))
              {{formatCurrency value}}
              {{#eq installments 1}}
                ((i18n.payment.atSight))
              {{else}}
                ((i18n.payment.in))
                {{installments}}x
              {{/eq}}
              <br />
              <strong>((i18n.payment.paymentSystem))</strong>
              {{paymentSystemName}}
              {{#if lastDigits}} ((i18n.payment.lastDigits))
                {{lastDigits}}{{/if}}
            </div>
          {{/each}}
        {{/compare}}

        <!-- N payments -->
        {{#compare payments.length "!=" 1}}
          <table width="100%" border="0" cellpadding="0" cellspacing="0">
            {{#each payments}}
              <tr>
                <td class="pv1 bb b--silver">
                  <strong class="ma0">{{paymentSystemName}}</strong><br />
                  {{#if lastDigits}}
                    ((i18n.payment.lastDigits))
                    {{lastDigits}}
                  {{/if}}
                  {{#eq installments 1}}
                    ((i18n.payment.atSight))
                  {{else}}
                    ((i18n.payment.in))
                    {{installments}}x
                  {{/eq}}
                </td>
                <td
                  class="pv1 bb b--silver align-right"
                >((i18n.common.currency))
                  {{formatCurrency value}}</td>
              </tr>
            {{/each}}
          </table>
        {{/compare}}
      {{/each}}
    </td>
  </tr>
{{/compare}}